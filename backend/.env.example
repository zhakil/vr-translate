# VR Translation Service Environment Configuration

# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=8080
WEBSOCKET_PORT=8081

# ================================
# API Keys Configuration
# ================================

# Google Cloud APIs
GOOGLE_VISION_API_KEY=your_google_vision_api_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-service-account.json

# DeepL API (Optional)
DEEPL_API_KEY=5fc8f2ca-9eaf-46cb-a7c2-ca3da8c35eae:fx
DEEPL_API_URL=https://api-free.deepl.com

# Azure Cognitive Services (Optional)
AZURE_COMPUTER_VISION_ENDPOINT=your_azure_cv_endpoint
AZURE_COMPUTER_VISION_KEY=your_azure_cv_key
AZURE_TRANSLATOR_ENDPOINT=your_azure_translator_endpoint
AZURE_TRANSLATOR_KEY=your_azure_translator_key

# AWS Services (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ================================
# Service Configuration
# ================================

# OCR Service Settings
OCR_ENGINE=google_vision
OCR_TIMEOUT=10000
OCR_CONFIDENCE_THRESHOLD=0.7

# Translation Service Settings
TRANSLATION_ENGINE=deepl
TRANSLATION_TIMEOUT=5000
TRANSLATION_CONFIDENCE_THRESHOLD=0.8

# ================================
# Database Configuration (if needed)
# ================================
# DATABASE_URL=mongodb://localhost:27017/vr-translate
# REDIS_URL=redis://localhost:6379

# ================================
# Security Configuration
# ================================
JWT_SECRET=your_jwt_secret_key_here
API_RATE_LIMIT=100
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=5

# ================================
# Performance Configuration
# ================================
CACHE_ENABLED=true
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30000

# ================================
# WebSocket Configuration
# ================================
WS_HEARTBEAT_INTERVAL=30000
WS_MESSAGE_TIMEOUT=10000
WS_MAX_MESSAGE_SIZE=1048576
WS_COMPRESSION_ENABLED=true

# ================================
# Development Configuration
# ================================
DEBUG_MODE=false
MOCK_SERVICES=false
ENABLE_API_DOCS=true