{
    "server": {
        "port": 3000,
        "websocketPort": 8080,
        "host": "localhost",
        "enableHealthCheck": true,
        "shutdownTimeout": 30000
    },
    "logging": {
        "level": "info",
        "serviceName": "vr-translate-backend",
        "file": {
            "enabled": true,
            "filename": "./logs/app.log",
            "maxSize": "20m",
            "maxFiles": 5
        }
    },
    "ocr": {
        "engine": "mock",
        "timeout": 10000,
        "confidenceThreshold": 0.7
    },
    "translation": {
        "engine": "deepl",
        "timeout": 5000,
        "confidenceThreshold": 0.8
    },
    "deepl": {
        "apiKey": "",
        "baseUrl": "https://api-free.deepl.com"
    },
    "websocket": {
        "heartbeatInterval": 30000,
        "messageTimeout": 10000,
        "maxMessageSize": 1048576,
        "compression": true
    },
    "cache": {
        "enabled": false,
        "ttl": 3600,
        "maxSize": 1000
    },
    "auth": {
        "jwtSecret": "your-super-secret-jwt-key-change-this-in-production",
        "jwtExpiry": "7d",
        "bcryptRounds": 12
    },
    "memory": {
        "cleanupInterval": "24h",
        "maxItemsPerUser": 10000,
        "retentionThreshold": 0.3
    }
}
